<!--index.wxml-->
<view class="container">
  <view  bindtap="bindViewTap" class="userinfo">
    <image class="userinfo-avatar" src="{{userInfo.avatarUrl}}" background-size="cover"></image>
    <text class="userinfo-nickname">{{userInfo.nickName}}</text>
  </view>
</view>


<button bindtap="bindNewGroupButtonTap" class="weui-btn" type="primary" size="default"  plain="true"> 新建作业组 </button>

<button class="weui-btn" type="primary" size="default"  plain="true"> 布置作业 </button>

<button class="weui-btn" type="primary" size="default"  plain="true"> 提交作业 </button>
